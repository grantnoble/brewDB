CREATE TABLE recipes
(
recipes_id mediumint unsigned NOT NULL auto_increment,
recipes_name varchar(255) NOT NULL,
recipes_version tinyint unsigned NOT NULL default 1,
recipes_type enum('Extract', 'Partial Mash', 'All Grain'),
recipes_style_id mediumint unsigned,
recipes_brewer_id mediumint unsigned,
recipes_asst_brewer_id mediumint unsigned,
recipes_batch_size float,
recipes_boil_size float,
recipes_boil_time mediumint unsigned,
recipes_efficiency float,
recipes_notes varchar(255),
recipes_taste_notes varchar(255),
recipes_taste_rating float,
recipes_og float,
recipes_fg float,
recipes_fermentation_stages mediumint unsigned,
recipes_primary_age mediumint unsigned,
recipes_primary_temp mediumint unsigned,
recipes_secondary_age mediumint unsigned,
recipes_secondary_temp mediumint unsigned,
recipes_tertiary_age mediumint unsigned,
recipes_tertiary_temp mediumint unsigned,
recipes_bottle_age mediumint unsigned,
recipes_bottle_age_temp mediumint unsigned,
recipes_date date,
recipes_carbonation float,
recipes_forced_carbonation enum('True', 'False'),
recipes_priming_sugar_name varchar(255),
recipes_carbonation_temp mediumint unsigned,
recipes_priming_sugar_equiv float,
recipes_keg_priming_factor float, 
recipes_est_og float,
recipes_est_fg float,
recipes_est_color float,
recipes_ibu float,
recipes_ibu_method enum('Rager', 'Tinseth', 'Garetz') NOT NULL default 'Tinseth',
recipes_est_abv float,
recipes_abv float,
recipes_actual_efficiency float,
PRIMARY KEY (recipes_id),
INDEX (recipes_name),
INDEX (recipes_type),
INDEX (recipes_brewer_id),
INDEX (recipes_style_id)
) AUTO_INCREMENT=100001;
